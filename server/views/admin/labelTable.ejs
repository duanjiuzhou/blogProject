    <meta name="keywords" content="孟烦了">
    <meta name="description" itemprop="description" content=" - 孟烦了的个人博客，是一个分享工作经验和生活,值得大家收藏的原创博客网站。">
    <meta name="author" content="">
    <link rel="icon" href="/img/favicon.png">
    <title>孟烦了的独立博客</title>
    <!-- Bootstrap core CSS -->
    <link href="/lib/bootstrap/bootstrap.min.css" rel="stylesheet">
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <link href="/lib/bootstrap/ie10-viewport-bug-workaround.css" rel="stylesheet">
    <link href="/lib/messageBox/jquery.growl.css" rel="stylesheet">
    <link rel="stylesheet" href="/font/iconfont.css">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://cdn.bootcss.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link rel="stylesheet" href="/css/labelTable.css">
</head>
<body>
<nav class=" navbar-inverse">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/"><img src="/img/polar-logo.png" height="100%"
                                                                 alt=""></a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li><a href="/admin">博客管理</a></li>
                <li class="active"><a href="/admin/labelTable">标签管理</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/api/signOut.do"><i class="iconfont icon-tuichu"></i></a></li>
            </ul>
        </div>
    </div>
</nav>
<div class="container">
    <!-- search -->
    <div class="page-header">
        <form id="search-label-form">
            <label for="label">标题：</label>
            <input type="text" id="label" name="label" class="form-control btn-style" maxlength="30">
            <button type="button" class="btn btn-success" id="createLabel">创建</button>
            <button type="button" class="btn btn-info" id="searchLabel">搜索</button>
        </form>
    </div>
    <!-- table -->
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>#</th>
                <th>标签名称</th>
                <th>操作</th>
                <th>创建时间</th>
            </tr>
            </thead>
            <tbody id="table-tbody">
            <% if(labelList.length != 0){ %>
            <% for(let [i, v] of labelList.entries()){ %>
            <tr>
                <th scope="row"><%= i+1 %></th>
                <td><%= v.label %></td>
                <td>
                    <button type="button" class="btn btn-primary btn-sm updateLabel" data-label="<%= v.label %>" value="<%= v.id %>">修改
                    </button>
                    <button type="button" class="btn btn-danger btn-sm deleteLabel" value="<%= v.id %>">删除</button>
                </td>
                <td><%= v.createTime %></td>
            </tr>
            <% } %>
            <% }else { %>
            <tr align="center">
                <td colspan="4">暂无数据</td>
            </tr>
            <% } %>
            </tbody>
        </table>
    </div>
    <!--label Modal -->
    <div class="modal fade" id="labelModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel"></h4>
                </div>
                <div class="modal-body">
                    <form id="label-modal-form">
                        <div class="form-group">
                            <label for="label">标签名称：</label>
                            <input type="text" name="label" class="form-control" id="label-name" maxlength="30">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" form="labelMake" id="saveSubmit">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="/lib/jq/jquery.min.js"></script>
<script src="/lib/bootstrap/bootstrap.min.js"></script>
<!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
<script src="/lib/bootstrap/ie10-viewport-bug-workaround.js"></script>
<script src="/lib/messageBox/jquery.growl.js"></script>
<script src="/js/labelTable.js"></script>
</body>
</html>